@{
    ViewData["Title"] = "Error";
    Layout = "_Layout"; // Asegúrate de usar tu layout principal
}

<div class="container">
    <div class="row justify-content-center align-items-center min-vh-75">
        <div class="col-lg-6 col-md-8 col-sm-10">
            <!-- Tarjeta de error -->
            <div class="card shadow-lg border-0">
                <!-- Encabezado de error -->
                <div class="card-header bg-danger text-white py-4">
                    <div class="d-flex align-items-center justify-content-center">
                        <i class="fas fa-exclamation-triangle fa-2x me-3"></i>
                        <h1 class="h3 mb-0">Error 404 ruta no encontrada</h1>
                    </div>
                </div>

                <!-- Cuerpo de la tarjeta -->
                <div class="card-body p-5 text-center">

                    <!-- Información detallada -->
                    <div class="alert alert-info text-start">
                        <h5 class="alert-heading">
                            <i class="fas fa-info-circle me-2"></i>Detalles del error
                        </h5>
                        <hr>
                        <ul class="mb-0">
                            <li><strong>URL solicitada:</strong> @Context.Request.Path</li>
                            <li><strong>Método:</strong> @Context.Request.Method</li>
                            <li><strong>Fecha y hora:</strong> @DateTime.Now.ToString("dd/MM/yyyy HH:mm:ss")</li>
                        </ul>
                    </div>

                    <!-- Posibles soluciones -->
                    <div class="alert alert-light border text-start mt-3">
                        <h6 class="fw-bold mb-3">
                            <i class="fas fa-lightbulb text-warning me-2"></i>Sugerencias:
                        </h6>
                        <ul class="mb-0">
                            <li>Verifica que la URL esté escrita correctamente</li>
                            <li>Comprueba que no haya errores de tipeo en la dirección</li>
                            <li>Usa la navegación principal del sitio</li>
                            <li>Contacta al administrador si el problema persiste</li>
                        </ul>
                    </div>

                    <!-- Botones de acción -->
                    <div class="d-flex flex-column flex-md-row justify-content-center gap-3 mt-5">
                        <!-- Botón para regresar -->
                        <a href="javascript:history.back()"
                           class="btn btn-outline-secondary btn-lg px-4 py-3">
                            <i class="fas fa-arrow-left me-2"></i>
                            Volver Atrás
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Estilos adicionales específicos para esta vista -->
<style>
    .min-vh-75 {
        min-height: 75vh;
    }
    .card {
        border-radius: 15px;
        overflow: hidden;
    }

    .card-header {
        border-bottom: none;
    }

    .display-1 {
        font-size: 5rem;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
    }

    .btn-primary {
        transition: all 0.3s ease;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0,123,255,0.3);
    }
</style>

<!-- Script para animar el código de error -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Agregar animación sutil al código de error
        const errorCode = document.querySelector('.display-1');
        if (errorCode) {
            errorCode.style.transition = 'all 0.5s ease';
            setTimeout(() => {
                errorCode.style.transform = 'scale(1.05)';
                setTimeout(() => {
                    errorCode.style.transform = 'scale(1)';
                }, 300);
            }, 500);
        }

        // Agregar mensaje en consola para desarrollo
        console.warn('Error @Context.Response.StatusCode - Ruta no encontrada: @Context.Request.Path');
    });
</script>