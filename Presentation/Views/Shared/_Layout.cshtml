@using Domain.Entities
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @(ViewData["SiteTitle"] ?? "Biblioteca")</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Site CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="bg-light d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png" alt="Logo Biblioteca" class="me-2" style="height: 40px; width: auto;" />
                    <div class="d-flex flex-column lh-1">
                        <span class="fw-semibold text-dark">Biblioteca</span>
                        @if (User?.Identity?.IsAuthenticated ?? false)
                        {
                            var extensionNombre = Context.User.FindFirstValue("Extension") ?? "Biblioteca";
                            <span class="text-muted" style="font-size: 1rem;">@extensionNombre</span>
                        }
                        else
                        {
                            <span class="text-muted" style="font-size: 0.7rem;">Sede principal Barcelona</span>
                        }
                    </div>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <!-- Menú principal - SOLO políticas de tipo HEADER -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <!-- Inicio siempre visible -->

                        @if (User?.Identity?.IsAuthenticated ?? false)
                        {
                                // Obtener políticas de ViewData - manejo robusto
                                IEnumerable<dynamic> politicasBasicas = ViewData["PoliticasBasicas"] as IEnumerable<dynamic>;
                                
                                // Si es null, crear lista vacía
                                politicasBasicas ??= Enumerable.Empty<dynamic>();

                                // Filtrar solo las de tipo Header para el menú principal
                                var politicasHeader = politicasBasicas
                                    .Where(p => p?.Tipo?.ToString() == "Header")
                                    .ToList();

                            @if (politicasHeader.Any())
                            {
                                @foreach (var politica in politicasHeader)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link @IsActiveMenu(politica.Ruta ?? "")"
                                           href="/@(politica.Ruta ?? "#")">
                                            <i class="@GetPolicyIcon(politica.Nombre ?? "")"></i>
                                            @(politica.Nombre ?? "Sin nombre")
                                        </a>
                                    </li>
                                }
                            }
                        }
                    </ul>

                    <!-- Menú de usuario - Incluye políticas de tipo MENU en el dropdown -->
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0 small">
                        @if (User?.Identity?.IsAuthenticated ?? false)
                        {
                                var politicasBasicas = ViewData["PoliticasBasicas"] as IEnumerable<dynamic> 
                                    ?? Enumerable.Empty<dynamic>();
                                var politicasCount = politicasBasicas.Count();

                                // Filtrar políticas de tipo Menu para el dropdown
                                var politicasMenu = politicasBasicas
                                    .Where(p => p?.Tipo?.ToString() == "Menu")
                                    .ToList();

                                var nombreCompleto = Context.User.FindFirstValue("NombreCompleto")
                                    ?? Context.User.FindFirstValue(System.Security.Claims.ClaimTypes.Name)
                                    ?? User.Identity?.Name
                                    ?? "Usuario";
                                var rol = Context.User.FindFirstValue("Rol")
                                    ?? Context.User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value
                                    ?? "Usuario";
                                var correo = Context.User.FindFirstValue(System.Security.Claims.ClaimTypes.Email)
                                    ?? "";

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark d-flex align-items-center user-dropdown-toggle" href="#" id="userDropdown" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center me-2 shadow-sm"
                                         style="width: 38px; height: 38px; font-size: 1rem;">
                                        <i class="fas fa-user"></i>
                                    </div>
                                    <div class="d-flex flex-column text-start me-2">
                                        <span class="fw-semibold text-dark" style="font-size: 0.95rem; line-height: 1.2; white-space: nowrap;">@nombreCompleto</span>
                                        <small class="text-muted" style="font-size: 0.8rem; line-height: 1;">@rol</small>
                                    </div>
                                    <i class="fas fa-chevron-down text-muted" style="font-size: 0.7rem;"></i>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    @* Mostrar políticas de tipo MENU en el dropdown *@
                                    @if (politicasMenu.Any())
                                    {
                                        @foreach (var politica in politicasMenu)
                                        {
                                            <li>
                                                <a class="dropdown-item" href="/@(politica.Ruta ?? "#")">
                                                    <i class="@GetPolicyIcon(politica.Nombre ?? "") me-1"></i>
                                                    @(politica.Nombre ?? "Sin nombre")
                                                </a>
                                            </li>
                                        }
                                        <li><hr class="dropdown-divider" /></li>
                                    }

                                    @* Opciones comunes del sistema *@
                                    <li>
                                        <a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#permisosModal">
                                            <i class="fas fa-gears"></i> Mis Permisos
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li>
                                        <form asp-controller="Usuario" asp-action="Logout" method="post" class="px-3">
                                            <button type="submit" class="btn btn-link dropdown-item text-danger p-0">
                                                <i class="fas fa-sign-out-alt me-1"></i> Cerrar sesión
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-sm btn-outline-dark ms-lg-2" asp-controller="Usuario" asp-action="Login">
                                    <i class="fas fa-sign-in-alt me-1"></i> Iniciar sesión
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="flex-grow-1">
        <div class="container py-4">
            <!-- Mensajes de TempData -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["WarningMessage"] != null)
            {
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    @TempData["WarningMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["InfoMessage"] != null)
            {
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    <i class="fas fa-info-circle me-2"></i>
                    @TempData["InfoMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <!-- Renderizar contenido principal -->
            @RenderBody()
        </div>
    </main>

    <!-- Modal para mostrar todos los permisos -->
    <div class="modal fade" id="permisosModal" tabindex="-1" aria-labelledby="permisosModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title" id="permisosModalLabel">
                        <i class="fas fa-shield-alt me-2"></i>Mis Políticas y Permisos
                        @{
                            var politicasModal = ViewData["PoliticasBasicas"] as IEnumerable<dynamic>
                                ?? Enumerable.Empty<dynamic>();
                            var totalPoliticas = politicasModal.Count();
                        }
                        @if (totalPoliticas > 0)
                        {
                            <span class="badge bg-light text-primary ms-2">@totalPoliticas</span>
                        }
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    @if (politicasModal.Any())
                    {
                        <div class="politicas-list">
                            <div class="row row-cols-1 row-cols-md-2 g-3">
                                @foreach (dynamic politica in politicasModal)
                                {
                                    <div class="col">
                                        <div class="card h-100 politica-card border-start border-start-3
                                                     @(politica.Tipo?.ToString() == "Header" ? "border-start-primary" :
                                                       politica.Tipo?.ToString() == "Menu" ? "border-start-success" :
                                                       "border-start-secondary") shadow-sm">
                                            <div class="card-body">
                                                <div class="d-flex align-items-start mb-2">
                                                    <i class="fas fa-check-circle text-success mt-1 me-2"></i>
                                                    <div class="flex-grow-1">
                                                        <h6 class="card-title fw-semibold mb-1
                                                                    @(politica.Tipo?.ToString() == "Header" ? "text-primary" :
                                                                      politica.Tipo?.ToString() == "Menu" ? "text-success" :
                                                                      "text-secondary")">
                                                            @(politica.Nombre ?? "Sin nombre")
                                                        </h6>
                                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                                            <div class="d-flex align-items-center">
                                                                <span class="badge bg-secondary me-2">ID: @(politica.PoliticaId ?? "N/A")</span>
                                                                <span class="badge
                                                                            @(politica.Tipo?.ToString() == "Header" ? "bg-primary" :
                                                                              politica.Tipo?.ToString() == "Menu" ? "bg-success" :
                                                                              "bg-secondary") me-2">
                                                                    @(politica.Tipo ?? "Sin tipo")
                                                                </span>
                                                            </div>
                                                            <span class="badge bg-success bg-opacity-10 text-success border border-success border-opacity-25 badge-politica">
                                                                Activo
                                                            </span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="mt-3">
                                                    <small class="text-muted d-block">
                                                        <i class="fas fa-code me-1"></i> Nombre interno:
                                                        <code class="text-dark">@(politica.Nombre ?? "N/A")</code>
                                                    </small>
                                                    @if (!string.IsNullOrEmpty(politica.Ruta?.ToString()))
                                                    {
                                                        <small class="text-muted d-block mt-1">
                                                            <i class="fas fa-link me-1"></i> Ruta:
                                                            <code class="text-dark">@politica.Ruta</code>
                                                        </small>
                                                    }
                                                    @if (!string.IsNullOrEmpty(politica.Rol?.ToString()))
                                                    {
                                                        <small class="text-muted d-block mt-1">
                                                            <i class="fas fa-user-tag me-1"></i> Rol:
                                                            <span class="text-dark">@politica.Rol</span>
                                                        </small>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-5">
                            <i class="fas fa-shield-alt fa-4x mb-3 opacity-50"></i>
                            <h5 class="mb-2">No hay políticas asignadas</h5>
                            <p class="small">Contacta al administrador del sistema para obtener permisos de acceso.</p>
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-1"></i> Cerrar
                    </button>
                </div>
            </div>
        </div>
    </div>

    <footer class="border-top py-4 bg-white mt-auto">
        <div class="container d-flex justify-content-between align-items-center">
            <span class="text-muted">
                © @DateTime.Now.Year Biblioteca Web - Todos los derechos reservados
            </span>
            <div>
                <a asp-controller="Home" asp-action="Privacy" class="text-decoration-none small me-3">
                    <i class="fas fa-shield-alt me-1"></i> Privacidad
                </a>
                <a asp-controller="Home" asp-action="About" class="text-decoration-none small me-3">
                    <i class="fas fa-info-circle me-1"></i> Acerca de
                </a>
                <a asp-controller="Home" asp-action="Contact" class="text-decoration-none small">
                    <i class="fas fa-envelope me-1"></i> Contacto
                </a>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Mostrar modal si hay parámetro en URL
            const urlParams = new URLSearchParams(window.location.search);
            if (urlParams.get('showPermissions') === 'true') {
                const modal = new bootstrap.Modal(document.getElementById('permisosModal'));
                modal.show();
            }

            // Marcar menú activo basado en la ruta actual
            const currentPath = window.location.pathname.toLowerCase();
            
            // Para enlaces del navbar
            document.querySelectorAll('.navbar-nav .nav-link').forEach(link => {
                const href = link.getAttribute('href')?.toLowerCase();
                if (href && (currentPath === href || currentPath.startsWith(href + '/'))) {
                    link.classList.add('active', 'fw-bold');
                }
            });

            // Para dropdowns, marcar el padre si algún hijo está activo
            document.querySelectorAll('.dropdown-toggle').forEach(dropdown => {
                const dropdownMenu = dropdown.nextElementSibling;
                if (dropdownMenu && dropdownMenu.classList.contains('dropdown-menu')) {
                    const hasActiveChild = Array.from(dropdownMenu.querySelectorAll('a'))
                        .some(link => {
                            const href = link.getAttribute('href')?.toLowerCase();
                            return href && (currentPath === href || currentPath.startsWith(href + '/'));
                        });
                    
                    if (hasActiveChild) {
                        dropdown.classList.add('active');
                    }
                }
            });
        });
    </script>

    <!-- Funciones de ayuda para el menú -->
    @{
        // Función para verificar si el menú está activo
        string IsActiveMenu(string ruta)
        {
            if (string.IsNullOrEmpty(ruta)) return "";

            // Si la ruta no comienza con "/", agregarlo para comparación
            var rutaComparar = ruta;
            if (!rutaComparar.StartsWith("/"))
            {
                rutaComparar = "/" + rutaComparar;
            }

            var currentPath = ViewContext.HttpContext.Request.Path.ToString().ToLower();
            var rutaPath = rutaComparar.ToLower();

            // Si la ruta es exactamente la actual
            if (currentPath == rutaPath) return "active";

            // Si la ruta es parte de la ruta actual (para subpáginas)
            if (!string.IsNullOrEmpty(rutaPath) && currentPath.StartsWith(rutaPath + "/"))
                return "active";

            // Para enlaces del home
            if (rutaPath == "/home/index" && currentPath == "/")
                return "active";

            return "";
        }

        // Función para obtener iconos basados en el nombre de la política
        string GetPolicyIcon(string policyName)
        {
            if (string.IsNullOrEmpty(policyName)) return "fas fa-link";

            var iconMap = new Dictionary<string, string>(StringComparer.OrdinalIgnoreCase)
            {
                ["Libros"] = "fas fa-book",
                ["Prestamos"] = "fas fa-book-reader",
                ["Inicio"] = "fas fa-home",
                ["Morosidad"] = "fas fa-clock",
                ["Auditoria"] = "fas fa-eye",
                ["Perfil"] = "fas fa-user",
                ["Usuario"] = "fas fa-users",
                ["Configuración"] = "fas fa-cog",
                ["Mis Permisos"] = "fas fa-gears",
                ["Ayuda"] = "fas fa-question-circle",
                ["Reportes"] = "fas fa-chart-bar",
                ["Carreras"] = "fas fa-user-graduate",
                ["Administración"] = "fas fa-cogs",
                ["Catalogos"] = "fas fa-book-open",
                ["Autores"] = "fas fa-pen-nib",
                ["Roles"] = "fas fa-key",
                ["Politicas"] = "fas fa-lock",
                ["Extensiones"] = "fas fa-building-flag"
            };

            foreach (var kvp in iconMap)
            {
                if (policyName.Contains(kvp.Key, StringComparison.OrdinalIgnoreCase))
                    return kvp.Value;
            }

            return "fas fa-link";
        }
    }

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>