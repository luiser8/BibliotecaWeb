@{
    ViewData["Title"] = "Contacto";
    var puedeContactarSoporte = ViewData["PuedeContactarSoporte"] as bool? ?? false;
    var puedeContactarAdministrador = ViewData["PuedeContactarAdministrador"] as bool? ?? false;
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">
                        <i class="fas fa-envelope me-2"></i>@ViewData["Title"]
                    </h2>
                </div>
                <div class="card-body p-4">
                    @if (!puedeContactarSoporte && !puedeContactarAdministrador && !User.IsInRole("Administrador"))
                    {
                        <div class="alert alert-warning">
                            <div class="d-flex">
                                <i class="fas fa-exclamation-triangle fa-2x me-3 mt-1"></i>
                                <div>
                                    <h5 class="alert-heading">Acceso limitado</h5>
                                    <p class="mb-0">
                                        Actualmente no tiene permisos para contactar soporte o administración. 
                                        Si necesita asistencia, comuníquese personalmente con la biblioteca.
                                    </p>
                                </div>
                            </div>
                        </div>
                    }

                    <div class="row mb-5">
                        <div class="col-md-8">
                            <h4 class="text-primary mb-4">
                                <i class="fas fa-comments me-2"></i>Estamos aquí para ayudarle
                            </h4>
                            <p class="lead">
                                ¿Tiene preguntas, comentarios o necesita asistencia? Nuestro equipo está listo para ayudarle.
                            </p>
                        </div>
                        <div class="col-md-4 text-end">
                            <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center p-4">
                                <i class="fas fa-headset fa-3x text-primary"></i>
                            </div>
                        </div>
                    </div>

                    <!-- Información de contacto -->
                    <div class="row mb-5">
                        <div class="col-md-4 mb-4">
                            <div class="card h-100 border-0 shadow-sm">
                                <div class="card-body text-center p-4">
                                    <div class="bg-info bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                                         style="width: 80px; height: 80px;">
                                        <i class="fas fa-map-marker-alt fa-2x text-info"></i>
                                    </div>
                                    <h5 class="card-title text-primary">Ubicación</h5>
                                    <p class="card-text">
                                        Biblioteca Central<br>
                                        Edificio de Ciencias<br>
                                        Universidad PSM<br>
                                        Ciudad Universitaria
                                    </p>
                                    <a href="https://maps.google.com" target="_blank" class="btn btn-outline-info btn-sm">
                                        <i class="fas fa-directions me-1"></i> Cómo llegar
                                    </a>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-4 mb-4">
                            <div class="card h-100 border-0 shadow-sm">
                                <div class="card-body text-center p-4">
                                    <div class="bg-success bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                                         style="width: 80px; height: 80px;">
                                        <i class="fas fa-phone fa-2x text-success"></i>
                                    </div>
                                    <h5 class="card-title text-primary">Teléfono</h5>
                                    <p class="card-text">
                                        <strong>Atención al usuario:</strong><br>
                                        (555) 123-4567<br>
                                        <br>
                                        <strong>Horario:</strong><br>
                                        Lunes a Viernes: 8:00 AM - 8:00 PM
                                    </p>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-4 mb-4">
                            <div class="card h-100 border-0 shadow-sm">
                                <div class="card-body text-center p-4">
                                    <div class="bg-warning bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                                         style="width: 80px; height: 80px;">
                                        <i class="fas fa-envelope fa-2x text-warning"></i>
                                    </div>
                                    <h5 class="card-title text-primary">Correo Electrónico</h5>
                                    <p class="card-text">
                                        <strong>Soporte general:</strong><br>
                                        soporte@biblioteca.edu<br>
                                        <br>
                                        <strong>Consultas técnicas:</strong><br>
                                        tecnico@biblioteca.edu
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Formulario de contacto condicional -->
                    @if (puedeContactarSoporte || puedeContactarAdministrador || User.IsInRole("Administrador"))
                    {
                        <div class="row">
                            <div class="col-lg-8 mx-auto">
                                <div class="card border-primary">
                                    <div class="card-header bg-primary text-white">
                                        <h5 class="mb-0">
                                            <i class="fas fa-paper-plane me-2"></i>Envíenos un mensaje
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <form id="contactForm" method="post" asp-action="ContactSubmit">
                                            <div class="mb-3">
                                                <label for="name" class="form-label">
                                                    <i class="fas fa-user me-1"></i>Nombre completo
                                                </label>
                                                <input type="text" class="form-control" id="name" name="name" 
                                                       value="@User.Identity?.Name" readonly>
                                            </div>
                                            
                                            <div class="mb-3">
                                                <label for="email" class="form-label">
                                                    <i class="fas fa-envelope me-1"></i>Correo electrónico
                                                </label>
                                                <input type="email" class="form-control" id="email" name="email" required>
                                            </div>
                                            
                                            <div class="mb-3">
                                                <label for="subject" class="form-label">
                                                    <i class="fas fa-tag me-1"></i>Asunto
                                                </label>
                                                <select class="form-select" id="subject" name="subject" required>
                                                    <option value="">Seleccione un asunto...</option>
                                                    @if (puedeContactarSoporte)
                                                    {
                                                        <option value="soporte">Soporte técnico</option>
                                                        <option value="consulta">Consulta general</option>
                                                    }
                                                    @if (puedeContactarAdministrador || User.IsInRole("Administrador"))
                                                    {
                                                        <option value="administracion">Asunto administrativo</option>
                                                        <option value="permisos">Solicitud de permisos</option>
                                                        <option value="problema">Reporte de problema</option>
                                                    }
                                                </select>
                                            </div>
                                            
                                            <div class="mb-3">
                                                <label for="message" class="form-label">
                                                    <i class="fas fa-comment-dots me-1"></i>Mensaje
                                                </label>
                                                <textarea class="form-control" id="message" name="message" 
                                                          rows="5" required placeholder="Escriba su mensaje aquí..."></textarea>
                                            </div>
                                            
                                            <div class="mb-3 form-check">
                                                <input type="checkbox" class="form-check-input" id="copy" name="copy">
                                                <label class="form-check-label" for="copy">
                                                    Enviarme una copia de este mensaje
                                                </label>
                                            </div>
                                            
                                            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                                <button type="reset" class="btn btn-outline-secondary">
                                                    <i class="fas fa-redo me-1"></i> Limpiar
                                                </button>
                                                <button type="submit" class="btn btn-primary">
                                                    <i class="fas fa-paper-plane me-1"></i> Enviar mensaje
                                                </button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <div class="mt-5">
                        <h4 class="text-primary mb-4">
                            <i class="fas fa-question-circle me-2"></i>Preguntas frecuentes
                        </h4>
                        <div class="accordion" id="faqAccordion">
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="faq1">
                                    <button class="accordion-button" type="button" data-bs-toggle="collapse" 
                                            data-bs-target="#collapse1" aria-expanded="true" aria-controls="collapse1">
                                        <i class="fas fa-book me-2"></i>¿Cómo puedo renovar un préstamo?
                                    </button>
                                </h2>
                                <div id="collapse1" class="accordion-collapse collapse show" aria-labelledby="faq1">
                                    <div class="accordion-body">
                                        Puede renovar sus préstamos desde la sección "Mis Préstamos" en su perfil. 
                                        Cada préstamo puede renovarse hasta 2 veces, siempre que no haya reservas pendientes.
                                    </div>
                                </div>
                            </div>
                            
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="faq2">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" 
                                            data-bs-target="#collapse2" aria-expanded="false" aria-controls="collapse2">
                                        <i class="fas fa-clock me-2"></i>¿Cuál es el horario de atención?
                                    </button>
                                </h2>
                                <div id="collapse2" class="accordion-collapse collapse" aria-labelledby="faq2">
                                    <div class="accordion-body">
                                        Nuestro horario de atención es de lunes a viernes de 8:00 AM a 8:00 PM, 
                                        y los sábados de 9:00 AM a 2:00 PM. El sistema en línea está disponible 24/7.
                                    </div>
                                </div>
                            </div>
                            
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="faq3">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" 
                                            data-bs-target="#collapse3" aria-expanded="false" aria-controls="collapse3">
                                        <i class="fas fa-key me-2"></i>¿Cómo solicito permisos especiales?
                                    </button>
                                </h2>
                                <div id="collapse3" class="accordion-collapse collapse" aria-labelledby="faq3">
                                    <div class="accordion-body">
                                        Si necesita permisos especiales para acceder a funcionalidades específicas, 
                                        debe contactar al administrador del sistema usando el formulario de contacto 
                                        o acudiendo personalmente a la biblioteca.
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-light">
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-primary">
                                <i class="fas fa-shield-alt me-2"></i>Respuesta garantizada
                            </h6>
                            <p class="small mb-0">
                                Nos comprometemos a responder todas las consultas en un plazo máximo de 48 horas hábiles.
                            </p>
                        </div>
                        <div class="col-md-6 text-end">
                            <h6 class="text-primary">
                                <i class="fas fa-users me-2"></i>Soporte dedicado
                            </h6>
                            <p class="small mb-0">
                                Nuestro equipo de soporte está disponible para asistirle en cualquier momento.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


}