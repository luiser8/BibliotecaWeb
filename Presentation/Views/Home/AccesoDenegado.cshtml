@using Domain.Entities
<!-- Views/Home/AccesoDenegado.cshtml -->
@{
    ViewData["Title"] = "Acceso Denegado";

    // Obtener datos del layout
    var rutaIntentada = ViewData["RutaIntentada"] as string;
    var politicasUsuario = ViewData["PoliticasUsuario"] as List<PoliticasUsuario> ?? new List<PoliticasUsuario>();
    var rutasPermitidas = ViewData["RutasPermitidas"] as List<string> ?? new List<string>();
    var esAdministrador = User.IsInRole("Administrador");
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0">
                <div class="card-body text-center p-5">
                    <!-- Icono de acceso denegado -->
                    <div class="mb-4">
                        <div class="rounded-circle bg-danger bg-opacity-10 d-inline-flex align-items-center justify-content-center"
                             style="width: 120px; height: 120px;">
                            <i class="fas fa-ban fa-4x text-danger"></i>
                        </div>
                    </div>

                    <!-- Título y mensaje -->
                    <h1 class="display-6 fw-bold text-danger mb-3">Acceso Denegado</h1>
                    <p class="lead text-muted mb-4">
                        No tiene permisos suficientes para acceder a esta sección del sistema.
                    </p>

                    <!-- Información adicional -->
                    <div class="alert alert-warning mb-4">
                        <div class="d-flex">
                            <i class="fas fa-exclamation-triangle fa-2x me-3 mt-1"></i>
                            <div>
                                <h5 class="alert-heading mb-2">Permisos insuficientes</h5>
                                <p class="mb-0">
                                    Su rol actual no le permite acceder a esta funcionalidad.
                                    Si cree que esto es un error, contacte al administrador del sistema.
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Información específica si está disponible -->
                    @if (!string.IsNullOrEmpty(rutaIntentada))
                    {
                        <div class="card border-info mb-4">
                            <div class="card-header bg-info bg-opacity-10 border-info">
                                <h6 class="mb-0">
                                    <i class="fas fa-info-circle me-2"></i> Detalles del intento de acceso
                                </h6>
                            </div>
                            <div class="card-body">
                                <p class="mb-2">
                                    <strong>Ruta intentada:</strong>
                                </p>
                                <code class="d-block bg-light p-3 rounded mb-3">@rutaIntentada</code>
                                <p class="small text-muted mb-0">
                                    Esta ruta no está incluida en sus políticas de acceso actuales.
                                </p>
                            </div>
                        </div>
                    }

                    <!-- Información para administradores -->
                    @if (esAdministrador)
                    {
                        <div class="card border-primary mt-4">
                            <div class="card-header bg-primary bg-opacity-10 border-primary">
                                <h6 class="mb-0">
                                    <i class="fas fa-user-shield me-2"></i> Información de depuración (solo administradores)
                                </h6>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <h6 class="text-primary mb-3">
                                            <i class="fas fa-shield-alt me-2"></i> Políticas activas
                                        </h6>
                                        @if (politicasUsuario.Any())
                                        {
                                            <ul class="list-group list-group-flush small">
                                                @foreach (var politica in politicasUsuario.Take(5))
                                                {
                                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                                        <span>@politica.Nombre</span>
                                                        @if (!string.IsNullOrEmpty(politica.Ruta))
                                                        {
                                                            <span class="badge bg-info bg-opacity-10 text-info border border-info">
                                                                @politica.Ruta
                                                            </span>
                                                        }
                                                    </li>
                                                }
                                            </ul>
                                            @if (politicasUsuario.Count > 5)
                                            {
                                                <div class="text-center mt-2">
                                                    <small class="text-muted">
                                                        y @(politicasUsuario.Count - 5) políticas más...
                                                    </small>
                                                </div>
                                            }
                                        }
                                        else
                                        {
                                            <p class="text-muted small mb-0">No hay políticas asignadas</p>
                                        }
                                    </div>

                                    <div class="col-md-6">
                                        <h6 class="text-primary mb-3">
                                            <i class="fas fa-route me-2"></i> Rutas permitidas
                                        </h6>
                                        @if (rutasPermitidas.Any())
                                        {
                                            <ul class="list-group list-group-flush small">
                                                @foreach (var ruta in rutasPermitidas.Take(5))
                                                {
                                                    <li class="list-group-item">
                                                        <code>@ruta</code>
                                                    </li>
                                                }
                                            </ul>
                                            @if (rutasPermitidas.Count > 5)
                                            {
                                                <div class="text-center mt-2">
                                                    <small class="text-muted">
                                                        y @(rutasPermitidas.Count - 5) rutas más...
                                                    </small>
                                                </div>
                                            }
                                        }
                                        else
                                        {
                                            <p class="text-muted small mb-0">No hay rutas específicas permitidas</p>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Acciones -->
                    <div class="mt-5">
                        <div class="d-grid gap-2 d-md-flex justify-content-center">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg px-4">
                                <i class="fas fa-home me-2"></i> Volver al Inicio
                            </a>

                            @if (User.Identity?.IsAuthenticated ?? false)
                            {
                                <button class="btn btn-outline-primary btn-lg px-4" data-bs-toggle="modal" data-bs-target="#permisosModal">
                                    <i class="fas fa-shield-alt me-2"></i> Ver Mis Permisos
                                </button>
                            }
                            else
                            {
                                <a asp-controller="Usuario" asp-action="Login" class="btn btn-outline-primary btn-lg px-4">
                                    <i class="fas fa-sign-in-alt me-2"></i> Iniciar Sesión
                                </a>
                            }
                        </div>

                        <!-- Enlace de contacto -->
                        <div class="mt-4">
                            <p class="text-muted small">
                                ¿Necesita acceso a esta sección?
                                <a asp-controller="Home" asp-action="Contact" class="text-decoration-none">
                                    Contacte al administrador
                                    <i class="fas fa-arrow-right ms-1"></i>
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Información adicional -->
            <div class="text-center mt-4">
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <div class="card border-0 bg-light">
                            <div class="card-body">
                                <i class="fas fa-user-check fa-2x text-success mb-3"></i>
                                <h6 class="fw-semibold">Verifique su rol</h6>
                                <p class="small text-muted mb-0">
                                    Asegúrese de tener el rol correcto asignado.
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="card border-0 bg-light">
                            <div class="card-body">
                                <i class="fas fa-key fa-2x text-warning mb-3"></i>
                                <h6 class="fw-semibold">Solicite permisos</h6>
                                <p class="small text-muted mb-0">
                                    Contacte al administrador para solicitar acceso.
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="card border-0 bg-light">
                            <div class="card-body">
                                <i class="fas fa-question-circle fa-2x text-info mb-3"></i>
                                <h6 class="fw-semibold">¿Necesita ayuda?</h6>
                                <p class="small text-muted mb-0">
                                    Consulte la documentación o solicite soporte.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal de permisos (si no está en el layout) -->
@if (!string.IsNullOrEmpty(Context.Request.Query["showPermissions"]))
{
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const modal = new bootstrap.Modal(document.getElementById('permisosModal'));
            modal.show();
        });
    </script>
}