@model Domain.Entities.DashBoard
@{
    ViewData["Title"] = "Dashboard";
    Layout = "_Layout";
}

<div class="mb-0 d-flex flex-column flex-md-row justify-content-between align-items-start gap-3">
    <div>
        <h1 class="h3 fw-semibold mb-1">Bienvenido a la biblioteca</h1>
        <p class="text-muted small mb-0">Consulta rápidamente el estado de tus préstamos y el catálogo disponible.</p>
    </div>
    <form class="w-100 w-md-50" asp-controller="Catalogo" asp-action="Index" method="get">
        <div class="input-group">
            <span class="input-group-text bg-white border-end-0">
                <i class="fas fa-search text-muted"></i>
            </span>
            <input type="text"
                   class="form-control border-start-0"
                   name="q"
                   placeholder="Buscar por título, autor o tema..."
                   aria-label="Buscar en el catálogo" />
            <button class="btn btn-outline-primary" type="submit">Buscar</button>
        </div>
    </form>
</div>
