@model Domain.Entities.DashBoard
@{
    ViewData["Title"] = "Dashboard";
    Layout = "_Layout";
}

<div class="mb-4 d-flex flex-column flex-md-row justify-content-between align-items-start gap-3">
    <div>
        <h1 class="h3 fw-semibold mb-1">Bienvenido a la biblioteca</h1>
        <p class="text-muted small mb-0">Consulta rápidamente el estado de tus préstamos y el catálogo disponible.</p>
    </div>
    <form class="w-100 w-md-50" asp-controller="Catalogo" asp-action="Index" method="get">
        <div class="input-group">
            <span class="input-group-text bg-white border-end-0">
                <i class="fas fa-search text-muted"></i>
            </span>
            <input type="text"
                   class="form-control border-start-0"
                   name="q"
                   placeholder="Buscar por título, autor o tema..."
                   aria-label="Buscar en el catálogo" />
            <button class="btn btn-outline-primary" type="submit">Buscar</button>
        </div>
    </form>
</div>

<!-- Estadísticas -->
<div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-book fa-3x text-primary mb-3"></i>
                    <h3 class="card-title">@Model.TotalBooks.ToString("N0")</h3>
                    <p class="card-text">Libros Totales</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
                    <h3 class="card-title">@Model.AvailableBooks.ToString("N0")</h3>
                    <p class="card-text">Disponibles</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-book-reader fa-3x text-warning mb-3"></i>
                    <h3 class="card-title">@Model.ActiveLoans.ToString("N0")</h3>
                    <p class="card-text">Préstamos Activos</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-clock fa-3x text-danger mb-3"></i>
                    <h3 class="card-title">@Model.PendingReturns.ToString("N0")</h3>
                    <p class="card-text">Pendientes de Devolución</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Acciones rápidas -->
    <div class="row">
        <div class="col-md-8 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-bolt me-2"></i>Acciones Rápidas</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <a asp-controller="Catalogo" asp-action="Index" class="btn btn-outline-primary w-100 py-3">
                                <i class="fas fa-search fa-2x mb-2"></i><br>
                                Buscar Libros
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a asp-controller="Prestamos" asp-action="Index" class="btn btn-outline-success w-100 py-3">
                                <i class="fas fa-book-open fa-2x mb-2"></i><br>
                                Mis Préstamos
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a asp-controller="Reservas" asp-action="Index" class="btn btn-outline-info w-100 py-3">
                                <i class="fas fa-calendar-check fa-2x mb-2"></i><br>
                                Mis Reservas
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-user me-2"></i>Mi Perfil</h5>
                </div>
                <div class="card-body text-center">
                    <div class="mb-3">
                        <div class="rounded-circle bg-primary text-white d-inline-flex align-items-center justify-content-center" 
                             style="width: 80px; height: 80px; font-size: 2rem;">
                            <i class="fas fa-user"></i>
                        </div>
                    </div>
                    <h5>@User.Identity.Name</h5>
                    <p class="text-muted">Estudiante</p>
                    <a asp-controller="Perfil" asp-action="Index" class="btn btn-primary">
                        <i class="fas fa-user-edit me-1"></i> Editar Perfil
                    </a>
                </div>
            </div>
        </div>
    </div>