@* Views/Usuario/AccesoDenegado.cshtml *@
@{
    ViewData["Title"] = "Acceso Denegado";
    Layout = "_Layout"; // O tu layout personalizado
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-ban"></i> Acceso Denegado
                    </h4>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-lock fa-5x text-danger"></i>
                    </div>
                    <h3 class="text-danger mb-3">No tienes permisos para acceder a esta página</h3>
                    <p class="lead">
                        Tu rol de usuario no tiene autorización para ver este contenido.
                    </p>
                    <p>
                        Si crees que esto es un error, contacta al administrador del sistema.
                    </p>
                    <div class="mt-4">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg">
                            <i class="fas fa-home"></i> Volver al Inicio
                        </a>
                        <a href="@Url.Action("Logout", "Usuario")" class="btn btn-outline-secondary btn-lg">
                            <i class="fas fa-sign-out-alt"></i> Cerrar Sesión
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>