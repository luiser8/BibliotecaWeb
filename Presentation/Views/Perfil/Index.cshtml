@{
    ViewData["Title"] = "Perfil";
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <!-- Header con avatar e informaci�n -->
                    <div class="d-flex align-items-center mb-4 pb-3 border-bottom">
                        <div class="rounded-circle bg-light d-flex align-items-center justify-content-center me-3" style="width: 72px; height: 72px;">
                            <span class="fs-3 text-secondary fw-medium">
                                @(ViewData["NombreUsuario"]?.ToString()?.Substring(0, 1) ?? "U")
                            </span>
                        </div>
                        <div>
                            <h1 class="h4 mb-1">@ViewData["NombreUsuario"]</h1>
                            <p class="text-muted mb-2">@ViewData["CorreoUsuario"]</p>
                            <span class="badge bg-light text-dark border">@ViewData["RolUsuario"]</span>
                        </div>
                    </div>

                    <!-- Detalles del perfil -->
                    <div class="mb-4">
                        <div class="list-group list-group-flush">
                            <div class="list-group-item d-flex justify-content-between align-items-center px-0 py-3 border-0">
                                <span class="text-muted">C�dula</span>
                                <span class="fw-medium">@ViewData["CedulaUsuario"]</span>
                            </div>
                            <div class="list-group-item d-flex justify-content-between align-items-center px-0 py-3 border-0">
                                <span class="text-muted">Extensi�n</span>
                                <span class="fw-medium">@ViewData["ExtensionUsuario"]</span>
                            </div>
                            <div class="list-group-item d-flex justify-content-between align-items-center px-0 py-3 border-0">
                                <span class="text-muted">Carrera</span>
                                <span class="fw-medium">@ViewData["CarreraUsuario"]</span>
                            </div>
                        </div>
                    </div>

                    <!-- Bot�n para cambiar contrase�a -->
                    <div class="pt-3 border-top">
                        <button type="button" class="btn btn-outline-dark w-100" data-bs-toggle="modal" data-bs-target="#passwordModal">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-2">
                                <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                                <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                            </svg>
                            Cambiar Contrase�a
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal para cambiar contrase�a -->
<div class="modal fade" id="passwordModal" tabindex="-1" aria-labelledby="passwordModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-bottom">
                <h5 class="modal-title" id="passwordModalLabel">Cambiar Contrase�a</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="passwordForm" method="post" asp-action="CambiarContrasena">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="currentPassword" class="form-label">Contrase�a Actual</label>
                        <div class="input-group">
                            <input type="password"
                                   class="form-control"
                                   id="currentPassword"
                                   name="contrasenaActual"
                                   required>
                            <button class="btn btn-outline-secondary" type="button" onclick="togglePassword('currentPassword', this)">
                                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                                    <circle cx="12" cy="12" r="3"></circle>
                                </svg>
                            </button>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="newPassword" class="form-label">Nueva Contrase�a</label>
                        <div class="input-group">
                            <input type="password"
                                   class="form-control"
                                   id="newPassword"
                                   name="nuevaContrasena"
                                   required
                                   minlength="8">
                            <button class="btn btn-outline-secondary" type="button" onclick="togglePassword('newPassword', this)">
                                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                                    <circle cx="12" cy="12" r="3"></circle>
                                </svg>
                            </button>
                        </div>
                        <div class="form-text">M�nimo 8 caracteres</div>
                    </div>

                    <div class="mb-3">
                        <label for="confirmPassword" class="form-label">Confirmar Nueva Contrase�a</label>
                        <div class="input-group">
                            <input type="password"
                                   class="form-control"
                                   id="confirmPassword"
                                   name="confirmarContrasena"
                                   required>
                            <button class="btn btn-outline-secondary" type="button" onclick="togglePassword('confirmPassword', this)">
                                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                                    <circle cx="12" cy="12" r="3"></circle>
                                </svg>
                            </button>
                        </div>
                    </div>

                    <div id="passwordError" class="alert alert-danger d-none" role="alert">
                        Las contrase�as no coinciden
                    </div>
                </div>
                <div class="modal-footer border-top">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-dark">Guardar Cambios</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    // Toggle password visibility
    function togglePassword(inputId, button) {
        const input = document.getElementById(inputId);
        const icon = button.querySelector('svg');

        if (input.type === 'password') {
            input.type = 'text';
            icon.innerHTML = '<path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24"></path><line x1="1" y1="1" x2="23" y2="23"></line>';
        } else {
            input.type = 'password';
            icon.innerHTML = '<path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path><circle cx="12" cy="12" r="3"></circle>';
        }
    }

    // Form validation
    document.getElementById('passwordForm').addEventListener('submit', function(e) {
        const newPassword = document.getElementById('newPassword').value;
        const confirmPassword = document.getElementById('confirmPassword').value;
        const errorElement = document.getElementById('passwordError');

        if (newPassword !== confirmPassword) {
            e.preventDefault();
            errorElement.classList.remove('d-none');
            document.getElementById('confirmPassword').focus();
            return false;
        }

        errorElement.classList.add('d-none');
        return true;
    });

    // Reset form when modal is closed
    document.getElementById('passwordModal').addEventListener('hidden.bs.modal', function () {
        document.getElementById('passwordForm').reset();
        document.getElementById('passwordError').classList.add('d-none');
    });
</script>